<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" minWidth="450" minHeight="150" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <HBox alignment="CENTER" fx:id="helpMessageContainer" spacing="16">
        <children>
          <Label fx:id="helpMessage" text="Label" wrapText="true" HBox.hgrow="ALWAYS">
            <HBox.margin>
              <Insets right="0" />
            </HBox.margin>
          </Label>
          <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
            <HBox.margin>
              <Insets left="0" />
            </HBox.margin>
          </Button>
        </children>
        <padding>
          <Insets bottom="24" left="24" right="24" top="24" />
        </padding>
      </HBox>
    </Scene>
  </scene>
</fx:root>
